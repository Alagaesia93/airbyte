{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "data": {
      "type": "object",
      "properties": {
        "app": {
          "type": "object",
          "properties": {
            "events": {
              "type": "object",
              "edges": {
                "type": "array",
                "items": {
                  "type": "object",
                  "node": {
                    "type": "object",
                    "properties": {
                      "occured_at": {
                        "type": ["null", "string"],
                        "format": "date-time"
                      }
                    }
                  }
                }
              }
            }
          }
        }  
      }
    }
  }
}